<body>
  <div class="hdr">
      <p class="title">結帳單</p>
  </div>
  <br><br><br><br>

  <div class="container" style="overflow-x:auto;">
      <table style="width:100%">
          <tr>
              <td class="td">工單號碼:</td>
              <td class="td1">
                  <%= upWorklist.WorkId %>
              </td>
          </tr>
          <tr>
              <td class="td">車牌:</td>
              <td class="td1">
                <%= upWorklist.CarId %>
              </td>
              <td class="td">車主: </td>
              <td class="td1">
                 <%= upWorklist.CName %>
              </td>
              <td class="td">車型:</td>
              <td class="td1">
                <%= upWorklist.carBrand %>&nbsp
                    <%= upWorklist.carType %>
              </td>
              <td class="td">里程數:
                  <td class="td1"><%= upWorklist.Miles %>
                    </td>
          </tr>
          <tr>
              <th class="th">No.</th>
              <th class="th">工作內容</th>
              <th class="th">工 資</th>
          </tr>
          <tr class="tr">
              <td>1</td>
              <td class="td2">
                  查修費
              </td>
              <td class="td2">$300</td>
          </tr>
          <%  var i = 1 ;

          for(var j = 0; j < materiallist.length; j++){
           %>
          <tr class="tr">
              <th class="th">No.</th>
              <th class="th">品 名</th>
              <th class="th">註 記</th>
              <th class="th">售 價</th>
              <th class="th">數 量</th>
              <th class="th">小 計</th>
          </tr>
          <tr class="tr">
              <td rowspan="3">1</td>
              <td class="td2"><%= materiallist[j].PName %></td>
              <td class="td2"><%= materiallist[j].MNote %></td>
              <td class="td2"><%= materiallist[j].Price %></td>
              <td class="td2"><%= materiallist[j].MQuantity %></td>
              <td class="td2"><%= materiallist[j].Amount %></td>

          </tr>
        <%  i++}; %>
          <p>工資金額:1000</p>
          <p>零件金額:$<%= Amount %></p>
          <p>稅前金額:<input type="text" class="tax" value="$2950"></p>
          <p>稅金:<input type="text" class="tax" value="$150"></p>
          <p>應收總金額:<input type="text" class="tax" value="$2100"></p>
          <p>實收總金額:<input type="text" class="tax" value="$2100"></p>

    <div class="hdr">

          <button class="button1" onclick="window.print()">列印</button>
    </div>
</body>
