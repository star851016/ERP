<!DOCTYPE html>
<html>
<link rel='stylesheet' href='/stylesheets/style.css' />
<body>
  <div class="hdl">
    <a href="/home1"><img src = "./images/home.png"></a>
  </div>
  <div class="hdr">
    <p class="title">進貨日報表</p>
  </div>
  <div style="width:100%;">
    <form name="sentMessage" action="/report" method="POST" id="product" novalidate>

  <div style="width:90%;">
    <br><br><br><br>
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<p style="font-size:48px;font-weight:bold;display:inline;">開始日期&nbsp</p>
    <input class="text" type="text" name="StartTime" id="date_3" readonly value="<%= StartTime %>" >

    <p style="font-size:48px;font-weight:bold;display:inline;">截止日期&nbsp</p>
    <input class="text" type="text" name="EndTime" id="date_4" readonly  value="<%= EndTime %>" >


    <button id="button" class="button" type="submit" >查詢</button>
  </div>

  </form>
</div>
  <br>
  <div style="width:100%;">

    </div>
    <table style="position:relative;margin:1px auto;">
      <tr border="1">
        <th>進貨日期</th>
        <th>進貨單號</th>
        <th>廠商</th>
        <th>產品</th>
        <th>廠牌</th>
        <th>規格</th>
        <th>數量</th>
        <th>單價</th>
        <th>小計</th>
      </tr>

      <% checkPurchase.forEach(function(purchase) { %>
             <tr class="tr_odd">
               <td ><%= purchase.CreateTime %></td>
               <td ><%= purchase.Pur_Id %></td>
               <td ><%= purchase.SName %></td>
               <td ><%= purchase.PName %></td>
               <td ><%= purchase.Types %></td>
               <td ><%= purchase.Specification %></td>
               <td ><%= purchase.Quantity %></td>
               <td ><%= purchase.Price%></td>
               <td ><%= purchase.SubPrice%></td>
             </tr>
             <%  }); %>
    </table>
    <link rel="stylesheet" type="text/css" href="/stylesheets/jquery-ui.css" />
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery-ui-datepicker.js"></script>
    <script type="text/javascript">
    $(function(){
    	$("#date_3").datepicker();
      $("#date_4").datepicker();
    });
    </script>
    <a href="/product"><img src = "./images/back.png" style="float:right;"></a>
  </body>
  </html>
