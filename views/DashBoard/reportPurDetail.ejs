<% include ../Shared/header %>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <body>
        <div class="hdr">
            <p class="title">進貨查詢</p>
        </div>
        <div style="width:100%;">
            <form name="sentMessage" action="/report" method="POST" id="product" novalidate>

                <div style="width:90%;">
                    <br><br><br><br> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    <p style="font-weight:bold;display:inline;">開始日期&nbsp</p>
                    <input class="text" type="text" name="StartTime" id="date_3" readonly value="<%= StartTime %>">

                    <p style="font-weight:bold;display:inline;">截止日期&nbsp</p>
                    <input class="text" type="text" name="EndTime" id="date_4" readonly value="<%= EndTime %>">


                    <button class="button1" type="submit">查詢</button>
                </div>

            </form>
        </div>
        <br>
        <div style="width:100%;">

        </div>
        <table class="table table-bordered">
            <tr>
                <th class="th2">名稱</th>
                <th class="th2">廠牌</th>
                <th class="th2">規格</th>
                <th class="th2">數量</th>
                <th class="th2">單價</th>
                <th class="th2">小計</th>
            </tr>

            <% checkPurchase.forEach(function(purchase) { %>
                <tr>
                    <td class="td0">
                        <%= purchase.PName %>
                    </td>
                    <td class="td0">
                        <%= purchase.Types %>
                    </td>
                    <td class="td0">
                        <%= purchase.Specification %>
                    </td>
                    <td class="td0">
                        <%= purchase.Quantity %>
                    </td>
                    <td class="td0">
                        <%= purchase.Price%>
                    </td>
                    <td class="td0">
                        <%= purchase.SubPrice%>
                    </td>
                </tr>
                <%  }); %>
        </table>
        <link rel="stylesheet" type="text/css" href="/stylesheets/jquery-ui.css" />
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script type="text/javascript" src="/javascripts/jquery-ui-datepicker.js"></script>
        <script type="text/javascript">
            $(function() {
                $("#date_3").datepicker();
                $("#date_4").datepicker();
            });
        </script>
        <a class="btn btn-default" href="/product">返回</a>
    </body>
