<link rel='stylesheet' href='/stylesheets/style.css' />

<div class="hdl">
  <a href="/home1"><img src = "./images/home.png"></a>
</div>
<div class="hdr">
  <p class="title">銷貨</p>
</div>
<form name="sentMessage" action="/purchase" method="POST" novalidate>
  <br><br><br>
  <div style="text-align:center;">
    <div style="position:relative;left:50%;margin-left:-250px;">
      <p style="background-color:#DDDDDD;border-radius:10px;height:200px;width:500px;text-align:center;margin:0px;font-size:40px;">
          客戶：<%= sales.CName %><br>銷售額：<%= sales.TSales %><br>狀態：<%= sales.Status %>
      <br>
    </div>

    <div style="width:100%;">

      <table >
        <tr border="1">
          <th>名稱</th>
          <th>廠牌</th>
          <th>規格</th>
          <th>數量</th>
          <th>單價</th>
          <th>小計</th>
        </tr>

        <% for(i=0;i<10;i++) { %>
         <tr class="tr_odd">
           <td ><%= salesList.Sales_PName[i] %></td>
           <td ><%= salesList.Sales_Types[i] %></td>
           <td ><%= salesList.Sales_Specification[i] %></td>
           <td ><%= salesList.Sales_Quantity[i] %></td>
           <td ><%= salesList.Sales_Price[i] %></td>
           <td ><%= salesList.SubPrice[i] %></td>
         </tr>
         <%  }; %>





      </table>


  </div>
  
    </form>
